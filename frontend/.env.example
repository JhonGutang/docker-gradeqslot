# Frontend Environment Configuration
# Place this file as .env in your frontend directory

# API Configuration
# Browser-accessible URLs (client-side requests from browser to backend)
VITE_API_URL=http://localhost:8000/api
VITE_API_BASE_URL=http://localhost:8000
VITE_BACKEND_URL=http://localhost:8000

# App Configuration
VITE_APP_NAME=GradeQSlot
VITE_APP_ENV=local
VITE_APP_DEBUG=true

# Development Server Configuration
VITE_HOST=0.0.0.0
VITE_PORT=3000

# WebSocket/Pusher Configuration (if using real-time features)
VITE_PUSHER_APP_KEY=
VITE_PUSHER_HOST=
VITE_PUSHER_PORT=443
VITE_PUSHER_SCHEME=https
VITE_PUSHER_APP_CLUSTER=mt1

# CORS Configuration (for development)
VITE_CORS_ORIGIN=http://localhost:3000

# Authentication Configuration
VITE_AUTH_GUARD=web
VITE_SESSION_LIFETIME=120

# File Upload Configuration
VITE_MAX_FILE_SIZE=2048
VITE_ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Pagination Configuration
VITE_ITEMS_PER_PAGE=10

# Timezone Configuration
VITE_TIMEZONE=Asia/Manila